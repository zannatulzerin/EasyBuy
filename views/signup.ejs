<div>
  <div>
    <div>
      <p
        style="
          text-align: left;
          font-weight: bold;
          margin-bottom: 5px;
          margin-top: 4px;
        "
      >
        Sign Up
      </p>

      <% if(infoSubmitObj != '') { %>
      <div role="alert"><%= infoSubmitObj %></div>
      <% } %> <% if(infoErrorsObj != '') { %>
      <div role="alert"><%= infoErrorsObj[0].message %></div>
      <% } %>

      <form method="POST" action="/signup">
        <div>
          <i style="font-size: 1.5rem; margin-right: 0.75rem"></i>
          <div>
            <label for="form3Example1c">Your Name</label>
            <input
              type="text"
              id="form3Example1c"
              name="name"
              autocomplete="off"
            />
          </div>
        </div>

        <div>
          <i style="font-size: 1.5rem; margin-right: 0.75rem"></i>
          <div>
            <label for="form3Example3c">Your Email</label>
            <input
              type="email"
              id="form3Example3c"
              name="email"
              autocomplete="off"
            />
          </div>
        </div>

        <div>
          <i style="font-size: 1.5rem; margin-right: 0.75rem"></i>
          <div>
            <label for="form3Example4c">Password</label>
            <input type="password" id="form3Example4c" name="password" />
          </div>
        </div>

        <div>
          <button type="submit">Register</button>
        </div>

        <div>
          <label for="form2Example3">
            Already have an account? <a href="/signin">Login</a>
          </label>
        </div>
      </form>
    </div>
  </div>
</div>
